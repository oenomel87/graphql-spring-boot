schema {
    query: Query
}

type Query {
    departments(
        deptId: ID
        deptCode: String
        name: String
        parentDeptId: Int
    ) : [Department]

    department(deptId: ID) : Department
}

type Department {
    deptId: ID!
    name: String!
    deptCode: String!
    deptPathId: String!
    parentDeptId: Int
    parentDeptCode: String
    fromDate: String!
    toDate: String
    childDepartments: [Department]
}
